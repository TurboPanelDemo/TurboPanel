---
kind: pipeline
name: Ubuntu 22.04 - Unit Test & Code Coverage
steps:
  - name: run
    image: ubuntu:22.04
    environment:
      DEBIAN_FRONTEND: noninteractive
      CODECOV_TOKEN:
        from_secret: CODECOV_TOKEN
    commands:
      - MAIN_REPO_DIR=$(pwd)
      - apt-get update
      - apt-get install -yq libicu-dev sudo cron apt-utils -yqq daemonize dbus-user-session fontconfig rsync
      - daemonize /usr/bin/unshare --fork --pid --mount-proc /lib/systemd/systemd --system-unit=basic.target

      - ls -la
      - mkdir /turbo-panel

      - cp installers/ubuntu-22.04/install-partial/install_base.sh /turbo-panel/install_base.sh
      - chmod +x /turbo-panel/install_base.sh
      - /turbo-panel/install_base.sh

      - cp installers/ubuntu-22.04/install-partial/install_web.sh /turbo-panel/install_web.sh
      - chmod +x /turbo-panel/install_web.sh

      - cp -r web /usr/local/turbo/web/
      - cd /usr/local/turbo/web/
      - ls -la

      - wget https://getcomposer.org/download/latest-stable/composer.phar
      - COMPOSER_ALLOW_SUPERUSER=1 turbo-php composer.phar install

      - /turbo-panel/install_web.sh

      - apt-get install autoconf build-essential -y
      - mkdir -p /usr/local/turbo/php-xdebug
      - cd /usr/local/turbo/php-xdebug
      - wget http://xdebug.org/files/xdebug-3.3.2.tgz
      - tar -xvzf xdebug-3.3.2.tgz
      - cd xdebug-3.3.2
      - /usr/local/turbo/php/bin/phpize
      - ./configure --enable-xdebug --with-php-config=/usr/local/turbo/php/bin/php-config
      - make

      - mkdir -p /usr/local/turbo/php/zend-xdebug
      - cp modules/xdebug.so /usr/local/turbo/php/zend-xdebug/xdebug.so

      - chmod 777 /usr/local/turbo/php/zend-xdebug/xdebug.so

      - cp /usr/local/turbo/web/tests/xdebug-php-ini.txt /usr/local/turbo/php/bin/php.ini

      - chmod 777 /usr/local/turbo/php/bin/php.ini
      - turbo-php -v

      - cd /usr/local/turbo/web/
      - chmod -R 777 vendor
      - apt install composer -y
      - composer test:coverage
      - mv clover.xml $MAIN_REPO_DIR/clover.xml
      - mv coverage.xml $MAIN_REPO_DIR/coverage.xml
      - cd $MAIN_REPO_DIR
      - apt install -yq pip
      - pip install codecov-cli
      - codecovcli --verbose upload-process -t $CODECOV_TOKEN
